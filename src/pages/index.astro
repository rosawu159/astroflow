---
import PageLayout from '../layouts/BaseLayout.astro'
import Section from '../components/Section.astro'
import Card from '../components/Card.astro'
import ProjectCard from '../components/ProjectCard.astro'
import Label from '../components/Label.astro'
import SkillLayout from '../components/SkillLayout.astro'
import PostPreview from '@/components/blog/PostPreview.astro'

import { Image } from 'astro:assets'
import astro from '../assets/wu.jpg'

import { getAllPosts, sortMDByDate } from '@/utils'

const languages = ['Mandarin', 'English']
const programming = ['Python', 'C#']
const frontend = ['React.js', 'Angular']
const backend = ['.NET Core', '.NET Framework', 'Flask']
const oscontainer = ['Docker', 'Unix', 'Openshift']
const iac_cicd = ['Jenkins', 'Ansible']


const MAX_POSTS = 10
const allPosts = await getAllPosts()
const allPostsByDate = sortMDByDate(allPosts).slice(0, MAX_POSTS)
---

<PageLayout meta={{ title: 'Home' }}>
	<div class='flex w-full flex-col gap-y-14'>
		<section class="flex flex-col items-center gap-y-2 gap-x-8 sm:px-6">
			<!-- 圖片和名稱 -->
			<div class="flex flex-col sm:flex-row items-center sm:items-start gap-x-2 sm:gap-x-6 mb-4">
			  <div class="flex flex-col items-center gap-y-2">
				<Image
				  src={astro}
				  alt="profile photo"
				  class="h-auto max-h-[6rem] sm:max-h-[8rem] w-auto rounded-full mb-3"
				  loading="eager"
				/>
				<h1 class="text-2xl sm:text-3xl font-bold">Y. Wu</h1>
			  </div>
		  
			  <!-- 介紹內容 -->
			  <div class="flex flex-col items-start gap-y-3 rounded-3xl border border-input px-4 py-4 text-xs sm:text-sm shadow-sm transition-all hover:shadow-md mt-4 sm:mt-0 ml-2 lg:ml-12">
				<div class="flex items-center gap-x-2">
				  <span class="relative flex items-center justify-center mr-1">
					<span class="absolute inline-flex h-2 w-2 animate-ping rounded-full border border-green-400 bg-green-400 opacity-75"></span>
					<span class="relative inline-flex h-2 w-2 rounded-full bg-green-400"></span>
				  </span>
				  <p class="font-medium">Full-stack developer in Python, C#, React.js, and Angular.</p>
				</div>
				<div class="flex items-center gap-x-2">
				  <span class="relative flex items-center justify-center mr-1">
					<span class="absolute inline-flex h-2 w-2 animate-ping rounded-full border border-green-400 bg-green-400 opacity-75"></span>
					<span class="relative inline-flex h-2 w-2 rounded-full bg-green-400"></span>
				  </span>
				  <p class="font-medium">4 years of Web backend development experience.</p>
				</div>
				<div class="flex items-center gap-x-2">
				  <span class="relative flex items-center justify-center mr-1">
					<span class="absolute inline-flex h-2 w-2 animate-ping rounded-full border border-green-400 bg-green-400 opacity-75"></span>
					<span class="relative inline-flex h-2 w-2 rounded-full bg-green-400"></span>
				  </span>
				  <p class="font-medium">2 years of Web frontend development experience.</p>
				</div>
				<div class="flex items-center gap-x-2">
				  <span class="relative flex items-center justify-center mr-1">
					<span class="absolute inline-flex h-2 w-2 animate-ping rounded-full border border-green-400 bg-green-400 opacity-75"></span>
					<span class="relative inline-flex h-2 w-2 rounded-full bg-green-400"></span>
				  </span>
				  <p class="font-medium">
					Active practitioner in tech communities, such as Cloud Native's<br>
					glossary and Women in Data Science Taipei.
				  </p>
				</div>
			  </div>
			</div>
			<div class='flex flex-wrap justify-center gap-x-7 gap-y-3'>
				<Label title='Software Engineer | Fullstack Engineer'>
					<svg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 24 24' class='h-5 w-5' slot='icon'
						><path
							fill='currentColor'
							d='M4.615 20q-.69 0-1.152-.462Q3 19.075 3 18.385v-9.77q0-.69.463-1.152Q3.925 7 4.615 7H9V5.615q0-.69.463-1.152Q9.925 4 10.615 4h2.77q.69 0 1.153.463q.462.462.462 1.152V7h4.385q.69 0 1.152.463q.463.462.463 1.152v9.77q0 .69-.462 1.152q-.463.463-1.153.463zm0-1h14.77q.23 0 .423-.192q.192-.193.192-.423v-9.77q0-.23-.192-.423Q19.615 8 19.385 8H4.615q-.23 0-.423.192Q4 8.385 4 8.615v9.77q0 .23.192.423q.193.192.423.192M10 7h4V5.615q0-.23-.192-.423Q13.615 5 13.385 5h-2.77q-.23 0-.423.192q-.192.193-.192.423zM4 19V8z'
						></path></svg
					>
				</Label>
				<Label title='Taipei, Taiwan'>
					<svg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 24 24' class='h-5 w-5' slot='icon'
						><path
							fill='currentColor'
							d='M12.003 11.73q.668 0 1.14-.475q.472-.475.472-1.143t-.475-1.14q-.476-.472-1.143-.472t-1.14.476q-.472.475-.472 1.143t.475 1.14q.476.472 1.143.472M12 19.677q2.82-2.454 4.458-4.991q1.638-2.538 1.638-4.39q0-2.744-1.737-4.53T12 3.981q-2.621 0-4.359 1.785t-1.737 4.53q0 1.852 1.638 4.39q1.639 2.537 4.458 4.99m0 1.343q-3.525-3.117-5.31-5.814q-1.786-2.697-1.786-4.909q0-3.173 2.066-5.234Q9.037 3 12 3t5.03 2.062q2.066 2.061 2.066 5.234q0 2.212-1.785 4.909q-1.786 2.697-5.311 5.814m0-10.904'
						></path></svg
					>
				</Label>
				<Label
					title='Connect on Linkedin'
					as='a'
					href='https://www.linkedin.com/in/ywu19ywu/'
					target='_blank'
				>
					<svg
						xmlns='http://www.w3.org/2000/svg'
						viewBox='0 0 16 16'
						slot='icon'
						class='h-5 w-5 text-foreground/75'
						><path
							fill='currentColor'
							d='M0 1.146C0 .513.526 0 1.175 0h13.65C15.474 0 16 .513 16 1.146v13.708c0 .633-.526 1.146-1.175 1.146H1.175C.526 16 0 15.487 0 14.854zm4.943 12.248V6.169H2.542v7.225zm-1.2-8.212c.837 0 1.358-.554 1.358-1.248c-.015-.709-.52-1.248-1.342-1.248S2.4 3.226 2.4 3.934c0 .694.521 1.248 1.327 1.248zm4.908 8.212V9.359c0-.216.016-.432.08-.586c.173-.431.568-.878 1.232-.878c.869 0 1.216.662 1.216 1.634v3.865h2.401V9.25c0-2.22-1.184-3.252-2.764-3.252c-1.274 0-1.845.7-2.165 1.193v.025h-.016l.016-.025V6.169h-2.4c.03.678 0 7.225 0 7.225z'
						></path></svg
					>
				</Label>
			</div>
		</section>

		<Section title='About'>
			<p class='text-muted-foreground'>
				A curious and creative software enthusiast with expertise in data engineering, application, and software development. Focused on delivering value through modern technology, optimizing customer needs, and leveraging Python automation for improved software reliability and team productivity.
			<p class='text-muted-foreground'>
				Designed data pipelines for manufacturing forecasting using MSSQL and C# event streaming, and developed scalable web applications in Angular and React.js to enhance data processing through resilient APIs.
			<p class='text-muted-foreground'>
				Engaged in the tech community through guest lecturing, hosting conferences, and contributing to open-source projects. Balances work with outdoor activities like cycling and hiking to maintain physical and mental well-being, with a focus on continuous learning, growth, and sharing knowledge.
		</Section>
		

		<Section title='Experience'>
			<Card
				heading='Software Engineer @ Viverse'
				date='Jun 2023 - Now (1yr 5mos)'
				subheading='Product developer in cloud-based 3D modeling platform team, involved in Metaverse-related projects that validated business hypothesis at the early stage.'
				altText='Lorem, ipsum dolor sit'
				imageClass='h-12 w-auto md:-left-16'
			>
				<ul class='ml-4 list-disc text-muted-foreground'>
					<li>
						Supported teams in improving development productivity and system reliability by designing and
						developing an automation tool. It was built on Pytest with the Factory Method Pattern and
						achieved 80% coverage in critical functionalities.
					</li>
					<li>
						Highly collaborated with product teams to deliver Web application features in customer-facing
						management platform (Next.js). In addition to feature development, my main contributions included 
						supporting i18n and integrating Axios API layer with React Hooks.
					</li>
				</ul>
			</Card>
			<Card
				heading='Software Engineer @ Adecco'
				subheading='Full Stack Engineer in a mobile hardware division, involved in developing multithreading systems, SQL processing, and UI components that facilitated rapid iterations and timely product launch.'
				date='Aug 2021 - Mar 2023 (1yr 9mons)'
				altText='Lorem, ipsum dolor sit'
				imageClass='h-12 w-auto md:-left-16'
			>
				<ul class='ml-4 list-disc text-muted-foreground'>
					<li>
						Implemented event-driven automation solutions focused on parallel system architectures to
						manage complex multithreading and multiprocessing test environments. Lead to a 20%
						improvement in coverage and more resilient software performance.
					</li>
					<li>
						Continuous communication with stakeholders to clarify requirements, managing team
						members, and triaging issues throughout the testing lifecycle.
					</li>
				</ul>
			</Card>
			<Card
				heading='Software Engineer @ Micron'
				subheading='Software Engineer in a customer-focused semiconductor team, delivered stakeholder services on a bi-weekly agile basis and improved business logic efficiency.'
				date='Sep 2019 - Mar 2021 (1yr 7mons)'
				altText='Lorem, ipsum dolor sit'
				imageClass='h-12 w-auto md:-left-16'
				>
				<ul class='ml-4 list-disc text-muted-foreground'>
					<li>
						Achieved significant cost reduction for internal team collaboration through migrating
						application from existing MVC razor to Angular with reusable typescript components and the
						service with consumed API by .NET Core3 and deploy to Openshift as docker application.
					</li>
					<li>
						Continuously evaluated and optimized hybrid ETL delivery and support using .NET Core, .NET
						Framework, Microsoft SSIS, and MSSQL database objects.
					</li>
				</ul>
			</Card>
		</Section>

		<Section title='Education'>
			<Card
				heading='National Taiwan University of Science and Technology'
				subheading='Bachelor Degree, Computer Science and Information Engineering'
				date='Sep 2014 - Jun 2019'
				altText='Lorem, ipsum dolor sit'
				imageClass='h-12 w-auto md:-left-16'
			>
				<ul class='ml-4 list-disc text-muted-foreground'>
					<li>Developing an image recognition model for muscle atrophy prediction with Biomedical Engineering Lab</li>
					<li>Real-time multi-object path recognition development with Industrial Management Lab</li>
					<li>Using multithreading to detect fraud in e-commerce applications with Computer Science Lab</li>
				</ul>
			</Card>
		</Section>


		<Section title='Skills'>
			<SkillLayout title='Languages' skills={languages} />
			<SkillLayout title='Programming' skills={programming} />
			<SkillLayout title='Frontend' skills={frontend} />
			<SkillLayout title='Backend' skills={backend} />
			<SkillLayout title='OS & Container' skills={oscontainer} />
			<SkillLayout title='IaC & CI/CD' skills={iac_cicd} />
		</Section>

		<Section title='Projects'>
			<div class='flex flex-col gap-y-3 sm:flex-row sm:gap-x-3 sm:gap-y-0'>
				<ProjectCard
					href='https://docs.google.com/presentation/d/1wsR124C4zOs_dvJ6eyEDwuubo56k0Wj-cR4_NHP2s4g/pub?start=false&loop=false&delayms=3000'
					heading='Containerized CI Automation'
					subheading='Leveraging Containers to Streamline Continuous Integration'
					imagePath='/src/assets/ci_automation.png'
					altText='Example'
					class='w-full sm:w-1/2'
				/>
				<ProjectCard
					as='div'
					heading='Coming soon...'
					subheading=''
					imagePath='/src/assets/coming-soon.png'
					altText='Lorem, ipsum dolor sit'
					class='w-full sm:w-1/2'
				/>
			</div>
		</Section>

		{
			allPostsByDate.length > 0 && (
				<Section title='Posts'>
					<ul class='flex flex-col gap-y-1'>
						{allPostsByDate.map((p) => (
							<li class='flex flex-col gap-x-2 sm:flex-row'>
								<PostPreview post={p} />
							</li>
						))}
					</ul>
				</Section>
			)
		}

		<Section title='Certifications'>
			<Card
				as='a'
				heading='Information Visualization Specialization'
				subheading='New York University'
				date='Mar 2023'
				altText='Lorem, ipsum dolor sit'
				imageClass='h-11 w-auto md:-left-16'
				href='https://coursera.org/share/1a0b5aa71fdc9ca1d48bc02156ca88c3'
			/>
			<Card
				as='a'
				heading='Foundations of User Experience (UX) Design'
				subheading='Google'
				date='Mar 2022'
				altText='Lorem, ipsum dolor sit'
				imageClass='h-11 w-auto md:-left-16'
				href='https://www.coursera.org/account/accomplishments/certificate/4WQR6LW8LPPV'
			/>
		</Section>

		
	</div>
</PageLayout>
